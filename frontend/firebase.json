{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/email",
        "function": "api"
      },
      {
        "source": "/files",
        "function": "api"
      },
      {
        "source": "/add",
        "function": "api"
      },
      {
        "source": "/title",
        "function": "api"
      }
    ],
    "headers": [
      {
        "source": "/service-worker.js",
        "headers": [{
          "key": "Cache-Control",
          "value": "no-cache"
        }]
      }
    ]
  }
}
